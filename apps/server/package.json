{
  "name": "@template/server",
  "version": "1.0.0",
  "description": "Backend API server with Fastify and tRPC",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "lint": "eslint .",
    "type-check": "tsc -b && tsc -b --clean",
    "clean": "rm -rf dist",
    "format": "prettier --write \"src/**/*.{js,ts,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,json}\""
  },
  "dependencies": {
    "@fastify/cors": "10.0.1",
    "@fastify/jwt": "9.0.1",
    "@prisma/client": "6.8.2",
    "@template/shared-lib": "workspace:*",
    "@trpc/server": "11.0.1",
    "bcryptjs": "2.4.3",
    "dotenv": "16.4.7",
    "fastify": "5.3.3",
    "fastify-plugin": "5.0.1",
    "jsonwebtoken": "9.0.2",
    "superjson": "^2.2.2",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@template/eslint-config": "workspace:*",
    "@template/tsconfig": "workspace:*",
    "@types/bcryptjs": "2.4.6",
    "@types/jsonwebtoken": "9.0.7",
    "@types/node": "22.10.2",
    "eslint": "9.17.0",
    "eslint-config-prettier": "^10.1.5",
    "prettier": "^3.5.3",
    "tsx": "4.19.2",
    "typescript": "5.7.2"
  }
}
