{
  "name": "@template/server",
  "version": "1.0.0",
  "description": "Backend API server with Fastify and tRPC",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@fastify/cors": "10.0.1",
    "@fastify/jwt": "9.0.1",
    "@prisma/client": "6.8.2",
    "@trpc/server": "11.0.1",
    "bcryptjs": "2.4.3",
    "fastify": "5.3.3",
    "jsonwebtoken": "9.0.2",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@template/eslint-config": "workspace:*",
    "@template/tsconfig": "workspace:*",
    "@types/bcryptjs": "2.4.6",
    "@types/jsonwebtoken": "9.0.7",
    "@types/node": "22.10.2",
    "eslint": "9.17.0",
    "tsx": "4.19.2",
    "typescript": "5.7.2"
  }
}
